<div class="container">

  <h1>New Review</h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content, label: "Review content", error: 'Content is mandatory' %>
  <%= f.input :rating, collection: Review::RATINGS %>

  <button type="button" class="btn btn-success"><%= f.button :submit %></button>
  <% end %>

  <p><%= link_to 'Back to restaurant card', restaurant_path(@restaurant) %></p>

</div>
